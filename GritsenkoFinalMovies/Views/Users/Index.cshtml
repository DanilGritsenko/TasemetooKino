@model IEnumerable<GritsenkoFinalMovies.Models.User>

@{
    ViewBag.Title = "Users Controller";
}

@Html.ActionLink("Admin Panel", "About", "Home")
<link rel="stylesheet" href="~/Content/tables.css">


<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table">
    <div class="row header blue">
        <div class="cell">
            @Html.DisplayNameFor(model => model.Role.Name)
        </div>
        <div class="cell">
            @Html.DisplayNameFor(model => model.Email)
        </div>
        <div class="cell">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="cell">
            @Html.DisplayNameFor(model => model.Password)
        </div>
        <div class="cell">
            @Html.DisplayNameFor(model => model.Age)
        </div>
        <div class="cell"></div>
        </div>

        @foreach (var item in Model)
        {
            <div class="row ">
                <div class="cell">
                    @Html.DisplayFor(modelItem => item.Role.Name)
                </div>
                <div class="cell">
                    @Html.DisplayFor(modelItem => item.Email)
                </div>
                <div class="cell">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="cell">
                    @Html.DisplayFor(modelItem => item.Password)
                </div>
                <div class="cell">
                    @Html.DisplayFor(modelItem => item.Age)
                </div>
                <div class="cell">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>
            </div>
        }

        </div>
